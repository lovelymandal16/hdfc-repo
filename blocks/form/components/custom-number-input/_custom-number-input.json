{
    "definitions": [
        {
            "title": "Custom Number Input (HDFC)",
            "id": "custom-number-input",
            "plugins": {
                "xwalk": {
                    "page": {
                        "resourceType": "core/fd/components/form/numberinput/v1/numberinput",
                        "template": {
                            "jcr:title": "Custom Number Input",
                            "fieldType": "number-input",
                            "fd:viewType": "custom-number-input"
                        }
                    }
                }
            }
        }
    ],
    "models": [
        {
            "id": "custom-number-input",
            "fields": [
                {
                    "component": "container",
                    "name": "basic",
                    "label": "Basic",
                    "collapsible": false,
                    "fields": [
                        {
                            "...": "../../models/form-common/_basic-input-placeholder-fields.json#/fields"
                        },
                        {
                            "component": "number",
                            "name": "default",
                            "label": "Default Value",
                            "valueType": "number"
                        },
                        {
                            "component": "select",
                            "name": "type",
                            "label": "Number type",
                            "valueType": "string",
                            "options": [
                                {
                                    "name": "Integer (1234)",
                                    "value": "integer"
                                },
                                {
                                    "name": "Decimal (1234.000)",
                                    "value": "number"
                                }
                            ]
                        },
                        {
                            "component": "boolean",
                            "name": "enableFormatting",
                            "label": "Enable Auto-Formatting",
                            "valueType": "boolean",
                            "description": "Automatically format numbers as they are typed"
                        }
                    ]
                },
                {
                    "...": "../../models/form-common/_help-container.json"
                },
                {
                    "component": "container",
                    "name": "validation",
                    "label": "Validation",
                    "collapsible": true,
                    "...": "../../models/form-common/_number-validation-fields.json"
                },
                {
                    "component": "container",
                    "name": "formats",
                    "label": "Formats",
                    "collapsible": true,
                    "fields": [
                        {
                            "component": "select",
                            "label": "Display Format",
                            "name": "displayFormat",
                            "valueType": "string",
                            "options": [
                                {
                                    "name": "No Pattern",
                                    "value": ""
                                },
                                {
                                    "name": "$1,234.21",
                                    "value": "¤#,##0.00"
                                },
                                {
                                    "name": "$1234.21",
                                    "value": "¤####0.00"
                                },
                                {
                                    "name": "1,234.210",
                                    "value": "#,###,##0.000"
                                },
                                {
                                    "name": "123,421%",
                                    "value": "#,###,##0%"
                                },
                                {
                                    "name": "₹1,234.21 (INR)",
                                    "value": "₹#,##0.00"
                                }
                            ]
                        },
                        {
                            "component": "boolean",
                            "name": "allowNegative",
                            "label": "Allow Negative Numbers",
                            "valueType": "boolean",
                            "description": "When enabled, negative numbers can be entered"
                        }
                    ]
                }
            ]
        }
    ]
}
